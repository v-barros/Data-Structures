{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe arquivo de build ativo",
			"command": "cl.exe",
			"args": [
				"-g",
				"${fileDirname}\\**.c",
				"${fileDirname}\\**.h",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compilador: cl.exe"
		}
	]
}